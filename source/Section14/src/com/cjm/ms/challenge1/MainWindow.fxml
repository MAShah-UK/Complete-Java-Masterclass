<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cjm.ms.challenge1.MainWindowController">
    <MenuBar>
        <Menu text="Contacts">
            <items>
                <MenuItem text="New" onAction=""/>
                <MenuItem text="Edit" />
                <MenuItem text="Delete" />
                <SeparatorMenuItem />
                <MenuItem text="Exit" />
            </items>
        </Menu>
    </MenuBar>
    <TableView fx:id="contactsTableView" editable="true" VBox.vgrow="ALWAYS">
      <columns>
         <TableColumn text="First Name" />
         <TableColumn text="Last Name" />
         <TableColumn text="Phone Number" />
          <TableColumn text="Notes" />
      </columns>
      <columnResizePolicy>
         <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
      </columnResizePolicy></TableView>
</VBox>
